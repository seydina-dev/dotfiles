#!/bin/sh

# --- Navigation & Utilities ---
alias c="clear"
alias cl="clear"
alias clr="clear"
alias lr="clear"
alias mc="micro"
alias hx="helix"
alias pls="sudo"
alias del="rm -rf"
alias copy="rsync --progress --ignore-existing -rhav"
alias png="ping 8.8.8.8 -c 50"

# Clipboard (using functions from functionrc)
alias cin="_cin"
alias cout="_cout"

# Color support
alias ip="ip --color=auto"
alias grep="grep --color=auto"

# Directory shortcuts
alias conf="cd $HOME/.config"
alias lbin="cd $HOME/.local/bin"

# Reload shell config
alias sb="source $HOME/.bashrc"
alias sz="source $HOME/.zshrc"

# Editor shortcuts for config files
alias eb="$EDITOR $HOME/.bashrc"
alias ez="$EDITOR $HOME/.zshrc"
alias al="$EDITOR $HOME/.aliasrc"
alias fn="$EDITOR $HOME/.functionrc"
alias pv="$EDITOR $HOME/.path_variablerc"

# Modern replacements
if command -v lsd >/dev/null 2>&1; then
    alias ls="lsd"
    alias la="lsd -a"
    alias ll="lsd -lah"
    alias tree="lsd --tree"
else
    alias ls="ls --color=auto"
    alias la="ls -a"
    alias ll="ls -lah"
fi

if command -v bat >/dev/null 2>&1; then
    alias cat="bat"
elif command -v batcat >/dev/null 2>&1; then
    alias cat="batcat"
fi

# Package Manager Abstraction
if command -v pacman >/dev/null 2>&1; then
    alias pkg-i="sudo pacman -S"
    alias pkg-r="sudo pacman -Rns"
    alias pkg-u="sudo pacman -Syyu"
    alias pkg-s="sudo pacman -Ss"
    if command -v paru >/dev/null 2>&1; then
        alias ys="paru -S"
        alias yss="paru -Ss"
        alias ysu="paru -Syu"
    elif command -v yay >/dev/null 2>&1; then
        alias ys="yay -S"
        alias yss="yay -Ss"
        alias ysu="yay -Syu"
    fi
elif command -v apt >/dev/null 2>&1; then
    alias pkg-i="sudo apt install"
    alias pkg-r="sudo apt remove"
    alias pkg-u="sudo apt update && sudo apt upgrade"
    alias pkg-s="apt search"
elif command -v dnf >/dev/null 2>&1; then
    alias pkg-i="sudo dnf install"
    alias pkg-r="sudo dnf remove"
    alias pkg-u="sudo dnf upgrade"
    alias pkg-s="dnf search"
elif command -v pkg >/dev/null 2>&1 && [ -d "/data/data/com.termux" ]; then
    alias pkg-i="pkg install"
    alias pkg-r="pkg uninstall"
    alias pkg-u="pkg upgrade"
    alias pkg-s="pkg search"
fi

# Git
alias ga="git add"
alias gc="git clone"
alias gs="git status"
alias gps="git push"
alias gpl="git pull"
alias gct="git commit -m"

# Media
alias dlt="yt-dlp -P $HOME/media/Tuto"
alias dlv="yt-dlp -P $HOME/media/Videos"

# System Info
alias sysinfo_memory="free -h"
alias sysinfo_hard="lscpu"
alias hst="history | cut -c 8- | sort | uniq | fzf --reverse | tr -d '\n' | _cin"
